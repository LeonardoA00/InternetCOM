<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="360">
    <Grid>
        <TextBox x:Name="ServerTextBox" HorizontalAlignment="Left" Height="100" Margin="30,70,0,0" TextWrapping="Wrap" Text="Server" VerticalAlignment="Top" Width="300"/>
        <Label x:Name="ConnectionStatus" Content="TcpCOM - Client" HorizontalAlignment="Left" Margin="30,22,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ClientTextBox" HorizontalAlignment="Left" Height="100" Margin="30,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="255,305,0,0" VerticalAlignment="Top" Width="75" Click="SendButton_Click"/>

    </Grid>
</Window>
